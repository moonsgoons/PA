from tkinter import *

def convert():
    C = float(celsius_entry.get())
    F = (C * (9 / 5) + 32)
    display_fahrenheit_label["text"] = str(F)

my_window = Tk()

friendly_label_1 = Label(my_window, text ="Enter Celsius")
friendly_label_2 = Label(my_window, text ="Fahrenheit Temperature")
display_fahrenheit_label = Label(my_window)
celsius_entry = Entry(my_window)
convert_button = Button(my_window, text = "Convert")

friendly_label_1.grid(row = 0, column = 0)
celsius_entry.grid(row = 0, column = 1)
friendly_label_2.grid(row = 1, column = 0)
display_fahrenheit_label.grid(row = 1, column = 1)
convert_button.grid(row = 2, column = 0)

my_window.mainloop()
